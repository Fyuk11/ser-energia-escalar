<section id="support" class="section steps">
  <div class="container">
    <h2>{{ section_data.title or "Soporte y Garant√≠a" }}</h2>
    {% if section_data.subtitle %}
      <p class="section-subtitle">{{ section_data.subtitle }}</p>
    {% endif %}
    <div class="steps-grid">
      {% for step in section_data.steps %}
        <div class="step-card animate-on-scroll" style="--delay: {{ loop.index0 * 0.2 }}s;">
          <div class="step-number">{{ step.number }}</div>
          <h3>{{ step.title }}</h3>
          <p>{{ step.text }}</p>
        </div>
      {% endfor %}
    </div>

    {% if section_data.cta %}
      <div class="steps-cta">
        <a href="{{ section_data.cta.url or '#' }}" class="btn btn-primary scroll-link">
          {{ section_data.cta.text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>