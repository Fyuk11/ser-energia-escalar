<section class="tabla-equipos">
  <div class="container">
    <h2 class="section-title">{{ section_data.title }}</h2>
    <p class="section-subtitle">{{ section_data.subtitle }}</p>

    <div class="table-wrapper">
      <table>
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Nivel de potencia</th>
            <th>Accesorios incluidos</th>
            <th>Precio</th>
          </tr>
        </thead>
        <tbody>
          {% for equipo in section_data.equipos %}
          <tr>
            <td>{{ equipo.name }}</td>
            <td>{{ equipo.potencia }}</td>
            <td>{{ equipo.accesorios }}</td>
            <td>{{ equipo.precio }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

    {% if section_data.cta %}
    <div class="equipos-cta">
      <a href="{{ section_data.cta.link }}" class="btn-primary">{{ section_data.cta.text }}</a>
    </div>
    {% endif %}
  </div>
</section>
