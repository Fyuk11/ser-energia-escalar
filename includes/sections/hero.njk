<section class="hero" id="hero">
  <!-- Videos -->
  {% if section_data.videos %}
    <video class="hero-video hero-desktop" autoplay muted loop playsinline>
      <source src="{{ section_data.videos.desktopWebm }}" type="video/webm">
      <source src="{{ section_data.videos.desktopMp4 }}" type="video/mp4">
    </video>
    <video class="hero-video hero-mobile" autoplay muted loop playsinline>
      <source src="{{ section_data.videos.mobileWebm }}" type="video/webm">
      <source src="{{ section_data.videos.mobileMp4 }}" type="video/mp4">
    </video>
  {% endif %}

  <div class="hero-overlay"></div>
  <div class="hero-fallback"></div>
  <canvas id="heroParticles" class="hero-particles"></canvas>

  <div class="hero-content-wrapper">
    <div class="hero-content">
      <!-- Título principal -->
      <h1 class="fade-left animate-on-scroll">
        {{ section_data.title or landing.title }}
      </h1>

      <!-- Subtítulo opcional -->
      {% if section_data.subheading %}
      <h2 class="fade-left delay-1 animate-on-scroll hero-subtitle">
        {{ section_data.subheading }}
      </h2>
      {% endif %}

      <!-- Párrafo descriptivo -->
      <p class="fade-left delay-2 animate-on-scroll">
        {{ section_data.subtitle or landing.description }}
      </p>

      {% if section_data.ctas %}
      <div class="hero-ctas">

        {% for cta in section_data.ctas %}
        <a href="{{ cta.url }}"
           class="btn-primary fade-left delay-{{ loop.index + 2 }} scroll-link animate-on-scroll"
           {% if "http" in cta.url %} target="_blank" rel="noopener noreferrer"{% endif %}>
          {{ cta.text }}
        </a>
        {% endfor %}

        <!-- Botón Holístico desplegable -->
        <div class="btn-holistic-wrapper fade-left delay-{{ section_data.ctas | length + 3 }} animate-on-scroll">
          <button class="btn-primary btn-holistic">
            Soy centro holístico <span class="btn-holistic-icon">▼</span>
          </button>
          <div class="btn-holistic-content">
            <h3>{{ section_data.holisticTitle or "Información para Centros Holísticos" }}</h3>
            <p>{{ section_data.holisticText or "Sumá la energía escalar a tu espacio y potencia la experiencia de tus consultantes. Capacitación, soporte y beneficios exclusivos." }}</p>
            <a href="https://wa.me/5493435616629" target="_blank" class="btn-primary">
              Solicitar más info
            </a>
          </div>
        </div>

      </div>
      {% endif %}
    </div>
  </div>

  <!-- Mandala decorativo -->
  <div class="hero-mandala" aria-hidden="true">
    <svg viewBox="0 0 500 500" xmlns="http://www.w3.org/2000/svg" class="mandala-svg">
      <defs>
        <linearGradient id="goldGrad" x1="0" x2="1">
          <stop offset="0" stop-color="#f7f3e6"/>
          <stop offset="1" stop-color="#d4af37"/>
        </linearGradient>
      </defs>
      <g fill="none" stroke="url(#goldGrad)" stroke-width="2" opacity="0.14">
        <circle cx="250" cy="250" r="120"/>
        <circle cx="250" cy="250" r="170"/>
        <circle cx="250" cy="250" r="220"/>
        <g transform="translate(250,250)">
          {% for angle in [0,45,90,135,180,225,270,315] %}
          <path d="M0,-120 C20,-80 20,-40 0,-0" transform="rotate({{ angle }})"/>
          {% endfor %}
        </g>
      </g>
    </svg>
  </div>
</section>
