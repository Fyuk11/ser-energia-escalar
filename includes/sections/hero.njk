<section class="hero" id="hero">
  <!-- Imagen de fondo -->
  {% if section_data.heroImage %}
    <div class="hero-image hero-desktop" 
         style="background-image: url('{{ section_data.heroImage.desktop }}');"></div>
    <div class="hero-image hero-mobile" 
         style="background-image: url('{{ section_data.heroImage.mobile }}');"></div>
  {% endif %}

  <div class="hero-overlay"></div>
 
  <canvas id="heroParticles" class="hero-particles"></canvas>

  <div class="hero-content-wrapper">
    <div class="hero-content">
      <!-- Título principal -->
      <h1 class="fade-left animate-on-scroll">
       <span class="golden-text">{{ section_data.title or landing.title }}</span>
      </h1> </br>

      <!-- Subtítulo opcional -->
      {% if section_data.subheading %}
     <h2 class="fade-left delay-1 animate-on-scroll hero-subtitle">
  {{ section_data.subheading | safe }}
</h2>

      {% endif %}

{% if section_data.subtitle %}
  <p class="hero-subtitle fade-left delay-2 animate-on-scroll">
    {{ section_data.subtitle }}
  </p>
{% endif %}



      {% if section_data.ctas %}
      <div class="hero-ctas">

        {% for cta in section_data.ctas %}
        <a href="{{ cta.url }}"
           class="btn-primary fade-left delay-{{ loop.index + 2 }} scroll-link animate-on-scroll"
           {% if "http" in cta.url %} target="_blank" rel="noopener noreferrer"{% endif %}>
          {{ cta.text }}
        </a>
        {% endfor %}

        <!-- Botón Holístico desplegable -->
        <div class="btn-holistic-wrapper fade-left delay-{{ section_data.ctas | length + 3 }} animate-on-scroll">
          <button class="btn-primary btn-holistic">
            Soy centro holístico <span class="btn-holistic-icon">▼</span>
          </button>
          <div class="btn-holistic-content">
            <h3>{{ section_data.holisticTitle or "Información para Centros Holísticos" }}</h3>
            <p>{{ section_data.holisticText or "Brindamos charla informativa sobre energía escalar y sesiones grupales, cupo hasta 50 personas. Coordinamos la unión por WhatsApp." }}</p>
            <a href="https://wa.me/5493435616629" target="_blank" class="btn-primary">
              Coordinar sesión
            </a>
          </div>
        </div>

      </div>
      {% endif %}
    </div>
  </div>

</section>
