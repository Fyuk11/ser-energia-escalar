<footer id="footer" class="footer">
  <div class="container footer__grid">

<div class="footer__copy">
  <!-- Logo a la izquierda -->
  <img src="{{ site.logo or '/assets/images/logo.png' }}" alt="Ser Energía Escalar" class="footer__logo">

  <!-- Información a la derecha del logo -->
  <div class="footer__info">
    <p>{{ section_data.text or "© 2025 Ser Energía Escalar. Todos los derechos reservados." }}</p>
    <span class="footer__email">{{ section_data.email or "contacto@serenergiaescalar.com" }}</span>
    {% if section_data.support %}
      <div class="footer__support">{{ section_data.support }}</div>
    {% endif %}
    {% if section_data.legal %}
      <div class="footer__legal">{{ section_data.legal }}</div>
    {% endif %}
  </div>
</div>


    <ul class="footer__menu">
      {% for link in section_data.links %}
        <li><a href="{{ link.url }}">{{ link.text }}</a></li>
      {% endfor %}
    </ul>

    <div class="footer__social">
      {% for s in section_data.social %}
        {% if s.type == "instagram" %}
          <a href="{{ s.url }}" target="_blank" rel="noopener" class="btn-social instagram">
            <i class="fab fa-instagram"></i>
          </a>
        {% endif %}
        {% if s.type == "whatsapp" %}
          <a href="{{ s.url }}" target="_blank" rel="noopener" class="btn-social whatsapp">
            <i class="fab fa-whatsapp"></i>
          </a>
        {% endif %}
      {% endfor %}
    </div>

  </div>
</footer>
