<section id="faqs" class="section faqs animate-on-scroll">
  <canvas id="faqsParticles" class="faqs-particles"></canvas>
  <div class="container">
    <h2 class="section-title">{{ section_data.title }}</h2>
    <div class="faqs-grid">
      {% for item in section_data.items %}
      <div class="faq-card">
        <div class="faq-question">
          <h3>{{ item.question }}</h3>
          <span class="toggle">+</span>
        </div>
        <div class="faq-answer">
          <p>{{ item.answer }}</p>
        </div>
      </div>
      {% endfor %}
    </div>

    <!-- CTA final -->
{% if section_data.cta %}
<div class="faq-cta">
  <h3>{{ section_data.cta.title }}</h3>
  <p>{{ section_data.cta.text }}</p>
  <a href="{{ section_data.cta.button_link }}" class="btn btn-primary scroll-link">{{ section_data.cta.button_text }}</a>
</div>
{% endif %}

</section>
