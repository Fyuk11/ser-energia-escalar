<section class="equipos-section" id="equipos">
  <div class="container">
    <h2 class="section-title">{{ section.title }}</h2>
    <p class="section-subtitle">{{ section.subtitle }}</p>

    <div class="equipos-grid">
      {% for equipo in section.equipos %}
      <article class="equipo-card">
        {% if equipo.cover %}
        <div class="equipo-cover">
          <img src="{{ equipo.cover }}" alt="{{ equipo.name }}">
        </div>
        {% endif %}

        <div class="equipo-content">
          <h3 class="equipo-name">{{ equipo.name }}</h3>
          <p class="equipo-description">{{ equipo.description }}</p>
          <p class="equipo-price">{{ equipo.price }}</p>

          <button class="toggle-btn" aria-expanded="false">
            Ver detalles
          </button>

          <div class="equipo-details">
            <ul class="details-list">
              {% for detail in equipo.details %}
              <li>{{ detail }}</li>
              {% endfor %}
            </ul>

{% if equipo.accessories %}
  <div class="accessories-section">
    <h4 class="accessories-title">Accesorios</h4>

    {% if equipo.accessories_description %}
      <p class="accessories-description">{{ equipo.accessories_description }}</p>
    {% endif %}

    {# --- LISTA DE ACCESORIOS (como las características) --- #}
    {% if equipo.accessories_details %}
      <ul class="details-list accessories-details">
        {% for item in equipo.accessories_details %}
          <li>{{ item }}</li>
        {% endfor %}
      </ul>
    {% endif %}

    {# --- GALERÍA DE IMÁGENES DESLIZABLE --- #}
    <div class="accessories-gallery">
      <div class="gallery-wrapper">
       

        <div class="gallery-track">
          {% for acc in equipo.accessories %}
            <div class="gallery-item">
              <img src="{{ acc.icon }}" alt="{{ acc.name }}">
              <span class="accessory-name">{{ acc.name }}</span>
            </div>
          {% endfor %}
        </div>

       
      </div>
    </div>
  </div>
{% endif %}

{# --- LINK DEL VIDEO --- #}
{% if equipo.video %}
  <div class="equipo-video-link" style="margin-top: 1.5rem;">
    <a href="{{ equipo.video.url }}" target="_blank" rel="noopener" class="btn-link">
      {{ equipo.video.label }}
    </a>
  </div>
{% endif %}




            {% if equipo.cta %}
            <div class="cta-wrapper">
              <a
                href="https://wa.me/{{ equipo.cta.whatsapp }}"
                target="_blank"
                class="cta-btn"
              >
                {{ equipo.cta.title }}
              </a>
            </div>
            {% endif %}
          </div>
        </div>
      </article>
      {% endfor %}
    </div>
  </div>
</section>
