<section class="equipos-section" id="equipos">
  <div class="container">
    <h2 class="section-title">{{ section.title }}</h2>
    <p class="section-subtitle">{{ section.subtitle }}</p>

    <div class="equipos-grid">
      {% for equipo in section.equipos %}
      <article class="equipo-card">
        {% if equipo.cover %}
        <div class="equipo-cover">
          <img src="{{ equipo.cover }}" alt="{{ equipo.name }}">
        </div>
        {% endif %}

        <div class="equipo-content">
          <h3 class="equipo-name">{{ equipo.name }}</h3>
          <p class="equipo-description">{{ equipo.description }}</p>
          <p class="equipo-price">{{ equipo.price }}</p>

          <button class="toggle-btn" aria-expanded="false">
            Ver detalles
          </button>

          <div class="equipo-details">
            <ul class="details-list">
              {% for detail in equipo.details %}
              <li>{{ detail }}</li>
              {% endfor %}
            </ul>

            {% if equipo.accessories %}
            <div class="accessories">
              {% for acc in equipo.accessories %}
              <div class="accessory-badge" title="{{ acc.name }}">
                <img src="{{ acc.icon }}" alt="{{ acc.name }}">
                <span>{{ acc.name }}</span>
              </div>
              {% endfor %}
            </div>
            {% endif %}

            {% if equipo.cta %}
            <div class="cta-wrapper">
              <a
                href="https://wa.me/{{ equipo.cta.whatsapp }}"
                target="_blank"
                class="cta-btn"
              >
                {{ equipo.cta.title }}
              </a>
            </div>
            {% endif %}
          </div>
        </div>
      </article>
      {% endfor %}
    </div>
  </div>
</section>
