<section id="pain" class="pain section">
  <div class="container">
    <div class="section-header">
      <h2>{{ section.title or "¿Te resuena alguna de estas situaciones?" }}</h2>
      <p>{{ section.subtitle or "No estás solo. Muchas personas buscan mejorar su bienestar y calidad de vida." }}</p>
    </div>

    <div class="pain-points">
      {% for point in section.points %}
      <div class="pain-point">
        <div class="pain-point-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L12 22M2 12L22 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <div class="pain-point-content">
          <h3>{{ point.title }}</h3>
          <p>{{ point.description }}</p>
        </div>
      </div>
      {% endfor %}
    </div>

    <div class="pain-cta">
      <p><strong>{{ section.cta_text or "La buena noticia: existe una forma más fácil de recuperar tu equilibrio y bienestar." }}</strong></p>
      <a href="{{ section.cta_link or '#solution' }}" class="btn">
        {{ section.cta_button or "Descubrir la solución" }}
      </a>
    </div>
  </div>
</section>
