<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{{ landing.title or site.name or "Landing Demo" }}</title>
  <meta name="description" content="{{ landing.description or site.description or "" }}">
  <meta name="robots" content="{{ landing.seo?.robots or site.robots or 'index,follow' }}">
  <link rel="canonical" href="{{ landing.seo?.canonical or (site.url + page.url) }}">

  <!-- Google Site Verification -->
  {% if site.verification %}
    <meta name="google-site-verification" content="b31_DpOVHAbMQInSt6ML5cYeVXg8oR-ejK3BEO40tZU" />
  {% endif %}

  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:site_name" content="{{ site.name or 'Landing Demo' }}">
  <meta property="og:title" content="{{ landing.seo?.og_title or landing.title or site.name }}">
  <meta property="og:description" content="{{ landing.seo?.og_description or landing.description or site.description }}">
  {% if landing.seo?.og_image or site.og_image %}
    <meta property="og:image" content="{{ landing.seo?.og_image or site.og_image }}">
  {% endif %}
  <meta property="og:url" content="{{ landing.seo?.og_url or (site.url + page.url) }}">

  <!-- Twitter cards -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ landing.seo?.twitter_title or landing.title or site.name }}">
  <meta name="twitter:description" content="{{ landing.seo?.twitter_description or landing.description or site.description }}">
  {% if landing.seo?.twitter_image or site.twitter_image %}
    <meta name="twitter:image" content="{{ landing.seo?.twitter_image or site.twitter_image }}">
  {% endif %}
  <meta name="twitter:site" content="{{ site.twitter_site or '@tuusuario' }}">

  <!-- Fuente Google -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

  <!-- Estilos -->
  <link rel="stylesheet" href="/assets/css/main.css">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

  <!-- Favicon -->
  <link rel="icon" href="/assets/images/favicon.png" type="image/png">
</head>
<body>
  {% if not nav_override %}
    {% include "partials/nav.njk" %}
  {% endif %}

  <main id="main" tabindex="-1">
    {{ content | safe }}
  </main>

  <!-- Netlify form oculto -->
  <form name="contact" netlify netlify-honeypot="bot-field" hidden>
    <input type="text" name="name" />
    <input type="email" name="email" />
    <textarea name="message"></textarea>
  </form>

  <!-- Scripts -->
  <script type="module" src="/assets/js/main.js" defer></script>

  <!-- Netlify Identity Widget -->
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  <script>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", (user) => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
</body>
</html>
